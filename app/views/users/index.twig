{% extends "base.twig" %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <a class="btn btn-success" href="/users/new">New User</a>

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Profile</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">
                    <i class="bi-person-{% if user.isAdministrator %}badge{% else %}circle{% endif %}"></i>
                </th>
                <td>{{ user.getEmail }}</td>
                <td>{{ user.getName }}</td>
                <td><a class="btn btn-sm btn-primary" href="/users/{{ user.getId }}/edit">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
